Screen:
    name: 'principal'
  
    MDCard:
        id: login_card
        orientation: 'vertical'
        size_hint: 0.6, 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        radius:25
        line_color:(0.2, 0.2, 0.2, 0.8)
        padding: 25
        spacing: 25
        halign:'center'
        

        MDLabel:
            id:name
            text:'ADMINISTRADOR'
            font_style:'H3'
            bold:True
            halign:'center'

        MDTextFieldRound:
            id: username
            hint_text: "username"
            helper_text_mode: "on_focus"
            icon_right: "account"
            size_hint_x: 0.6
            size_hint_y:.6
            font_size: 40
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            size_hint_x: 0.6
            font_size: 40
            pos_hint: {"center_x": 0.5}
            password: True
            icon_right:"key"

        MDGridLayout:
            cols:2
            FloatLayout:    
                MDFillRoundFlatButton:
                    text: "Regresar"
                    font_size: 20
                    pos_hint: {"center_x": 0.5,"center_y": 0.7}
                #  md_bg_color: (0,0.65,0.65,1)
                    size_hint: (0.7,0.5)
                    on_release: app.principal()
            FloatLayout:        
                MDFillRoundFlatButton:
                    text: "Ingresar"
                    font_size: 20
                    size_hint: (0.7,0.5)
                    pos_hint: {"center_x": 0.5,"center_y": 0.7}
    MDFloatingActionButtonSpeedDial:
        root_hint_animation: True

        data: app.datas
        #root_button_anim: True    
        callback: app.callback
        #hint_animation: True
    