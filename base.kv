Screen:
    name: 'base'

    MDCard:
        id: login_card
        orientation: 'vertical'
        size_hint: 0.5, 0.9
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        radius:25
        line_color:(0.2, 0.2, 0.2, 0.8)
        padding: 25
        spacing: 25
        

        MDLabel:
            id:name
            text:'Datos de cliente'
            font_style:'H3'
            bold:True
            halign:'center'

        MDTextFieldRound:
            id: username
            hint_text: "username"
            icon_right: "nombre completo"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: email
            hint_text: "email"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}
            #password: True
            icon_right:"key"
        MDTextFieldRound:
            id: numberp
            hint_text: "numero de telefono"
            icon_right: "nombre completo"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: nit
            hint_text: "NIT"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}
            #password: True
            icon_right:"key"
        MDTextFieldRound:
            id: idd
            hint_text: "id de dispositivo"
            icon_right: "nombre completo"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: city
            hint_text: "Ciudad"
            icon_right: "nombre completo"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}    
        MDTextFieldRound:
            id: address
            hint_text: "address"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}
            #password: True
            icon_right:"key"
        MDTextFieldRound:
            id: postal
            hint_text: "codigo postal"
            icon_right: "nombre completo"
            size_hint_x: 0.6
            font_size: 10
            pos_hint: {"center_x": 0.5}

        MDGridLayout:
            cols:2
            FloatLayout:    
                MDFillRoundFlatButton:
                    text: "Regresar"
                    font_size: 20
                    pos_hint: {"center_x": 0.5,"center_y": 0.7}
                #  md_bg_color: (0,0.65,0.65,1)
                    size_hint: (0.7,1)
                    on_release: app.principal()
            FloatLayout:        
                MDFillRoundFlatButton:
                    text: "Ingresar"
                    font_size: 20
                    size_hint: (0.7,1)
                    pos_hint: {"center_x": 0.5,"center_y": 0.7}
                    on_release: app.base()
    MDFloatingActionButtonSpeedDial:
        data: app.baseskv
        root_button_anim: True
        callback: app.form

<RoundedButton@Button>:
    background_color:(0,0,0,0)
    background_normal: ""
    canvas.before:
        Color:
            rgba:(0,0.65,0.65,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25]    